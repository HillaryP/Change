<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#FFF"
    tools:context="edu.washington.prathh.change.Payment"
    android:id="@+id/Payment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/donations"
            android:layout_marginRight="65dp"
            android:layout_marginLeft="15dp"
            android:id="@+id/summary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Payment"
            android:textStyle="bold"
            android:textColor="#8FBE00"
            android:id="@+id/header"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/settings"
            android:id="@+id/settings"
            android:layout_gravity="right" />
    </LinearLayout>




    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_marginTop="5dp"
        android:hint="$0"
        android:textColorHint="#8FBE00"
        android:textSize="72dp"
        android:layout_below="@+id/user_info"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridView"
        android:layout_alignBottom="@+id/button1"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:columnCount="3"
        android:rowCount="4"
        android:useDefaultMargins="true"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="40dp"
            android:textColor="#8FBE00"
            android:background="#fff"
            android:id="@+id/number1"
            android:onClick="addNum"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="40dp"
            android:textColor="#8FBE00"
            android:background="#fff"
            android:id="@+id/number2"
            android:onClick="addNum"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="40dp"
            android:textColor="#8FBE00"
            android:background="#fff"
            android:id="@+id/number3"
            android:onClick="addNum"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="40dp"
            android:textColor="#8FBE00"
            android:background="#fff"
            android:id="@+id/number4"
            android:onClick="addNum"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="40dp"
            android:textColor="#8FBE00"
            android:background="#fff"
            android:id="@+id/number5"
            android:onClick="addNum"
            />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:textSize="40dp"
            android:textColor="#8FBE00"
            android:background="#fff"
            android:id="@+id/number6"
            android:onClick="addNum"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:textSize="40dp"
            android:textColor="#8FBE00"
            android:background="#fff"
            android:id="@+id/number7"
            android:onClick="addNum"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:textSize="40dp"
            android:textColor="#8FBE00"
            android:background="#fff"
            android:id="@+id/number8"
            android:onClick="addNum"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:textSize="40dp"
            android:textColor="#8FBE00"
            android:background="#fff"
            android:id="@+id/number9"
            android:onClick="addNum"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:textSize="64dp"
            android:textColor="#8FBE00"
            android:background="#fff"
            android:id="@+id/period"
            android:onClick="addNum"
            />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="40dp"
            android:textColor="#8FBE00"
            android:background="#fff"
            android:id="@+id/zero"
            android:onClick="addNum"
            />

        <Button
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_marginLeft="19dp"
            android:background="@drawable/backspacesmall"
            android:id="@+id/delete"
            android:onClick="addNum"
            />





    </GridLayout>



    <Button
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:background="@drawable/nextbutton"
        android:id="@+id/button1"
        android:layout_marginLeft="250dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right" />

</LinearLayout>